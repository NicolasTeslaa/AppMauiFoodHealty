<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodHealty.NovaPasta1.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">
    <VerticalStackLayout>
        <Frame HeightRequest="700" VerticalOptions="Center">
            <StackLayout VerticalOptions="Center">
                <Image
                    HeightRequest="150"
                    HorizontalOptions="Center"
                    Source="healthyfood.png" />
                <Entry
                    Margin="0,20,0,0"
                    Keyboard="Email"
                    Placeholder="seuemail@email.com" />
                <Entry Placeholder="Sua senha" />
                <Button
                    Margin="0,10,0,0"
                    FontSize="Large"
                    Text="Entrar" 
                    Clicked="dadosCliente"/>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>